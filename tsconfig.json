{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "esnext",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true
    },
    "exclude": [
        "jest.config.ts",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/**",
        "dist",
        "node_modules"
    ]
}